/* This is used to provide default options for each sub-project.
 * Should be largely environment agnostic apart from established best practices.
 */
{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // ensure we import types with `import type` for explicit transpile elision
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
